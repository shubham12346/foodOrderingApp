{
  "compilerOptions": {
    "target": "es6", // Target ECMAScript version
    "module": "commonjs", // Module system
    "esModuleInterop": true, // Enables default imports from CommonJS modules
    "jsx": "react", // JSX support
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent casing in file names
  },
  "include": ["src/**/*", "tsconfig.json"], // Include all TypeScript files in src
  "exclude": ["node_modules", "build"] // Exclude node_modules and build folders
}
